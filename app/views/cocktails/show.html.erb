<div class="container">

<p>    </p>

  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


  <h1><%= @cocktail.name %></h1>


  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <% end %>

  <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>

  <div class="back"><%= link_to 'Delete Cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></div>

  <p><%= link_to cocktails_path %></p>
</div>




